<h1>取引先一覧</h1>
<table class="table">
<tr>
  <td class="text-center">取引先番号</td>
  <td class="text-center">取引先名</td>
  <td class="text-center">郵便番号</td>
  <td class="text-center">住所</td>
  <td class="text-center">担当者名</td>
  <td class="text-center">電話番号</td>
  <td class="text-center">詳細</td>
  <td class="text-center">編集</td>
  <td class="text-center">削除</td>
  <td class="text-center">請求書</td>
  <td class="text-center">見積書(カード)</td>
  <td class="text-center">見積書(通信)</td>
  <td class="text-center">見積書(通信山陰)</td>
  <!-- <td class="text-center">見積書</td> -->
</tr>
  <% @clients.each do |client| %>

    <tr>
      <td><%= client.client_number %></td>
      <td><%= client.client_name %></td>
      <td><%= client.postal_code %></td>
      <td><%= client.address %></td>
      <td><%= client.manager %></td>
      <td><%= client.phone_number %></td>
      <td><%= link_to "詳細", client, class: "btn btn-success" %></td>
      <td><%= link_to "編集", edit_client_path(client), class: "btn btn-warning" %></td>
      <td><%= button_to "削除", client, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      <td><%= link_to "請求書", client_invoices_path(client), class: "btn btn-info" %></td>
      <td><%= link_to "見積書(カード)", client_quotations_path(client), class: "btn btn-secondary" %></td>
      <td><%= link_to "見積書(通信)", client_tusin_quotations_path(client), class: "btn btn-secondary" %></td>
      <td><%= link_to "見積書(通信山陰)", client_sanin_quotations_path(client), class: "btn btn-secondary" %></td>
      <!-- <td><%= link_to "見積書", client_quotations_path(client), class: "btn btn-secondary" %></td> -->
    </tr>
  <% end %>
</table>

<%= link_to "取引先追加", new_client_path, class: "btn btn-primary" %>