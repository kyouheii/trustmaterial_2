<h1>新規登録</h1>
<%= form_for(resource, as: resource_name, url: "#") do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :携帯番号 %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号" %>
  </div>

  <div class="field">
    <%= f.label :最寄駅 %><br />
    <%= f.text_field :nearest_station, autofocus: true, autocomplete: "最寄駅" %>
  </div>


  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em><%= @minimum_password_length %>桁以上</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:'' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
